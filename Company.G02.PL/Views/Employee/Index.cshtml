@model IEnumerable<Employee>

@{
    ViewData["Title"] = "Index";
    // ViewData["Message"]; //object value
    string? ViewDataMessage = ViewData["Message"] as string;
    string? ViewBagMessage = ViewBag.Message; //dynamic value
}

<h1>All Employee</h1>
<br />
<br />

@* <div class="m-3 alert alert-danger"> *@
    @* <p>@ViewData["Message"]</p> *@
    @* <p>@ViewBag.Message</p> *@

@* </div> *@
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="m-3 alert alert-info">
        <p> @TempData["Message"]</p>
    </div>
}
<form class="row g-4 my-3">

        <div class="col-4">
        <input id="SearchInput" class="form-control" placeholder="Search By Name" name="SearchInput" />
        </div>
        <div class="col-8">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
</form>


<a asp-action="Create" class="btn btn-primary"> Create Employee</a>
<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Salary</th>
                <th>IsActive</th>
                <th>IsDeleted</th>
                <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                <th>Department</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Salary</td>
                    <td>@item.IsActive</td>
                    <td>@item.IsDeleted</td>
                    <td>@item.HiringDate</td>
                    <td>@item.CreateAt</td>
                    @if(item.DepartmentId == null)
                    {
                        <td>No Dept</td>
                    }
                    else
                    {
                        <td>@item.Department.Name</td>
                    }
                     
                    @* <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td> *@
                    <partial name="_ButtonPartialView" model="@item.Id">

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning" role="alert">
        <h4>
            There is are No Employees :(
        </h4>
    </div>
}
