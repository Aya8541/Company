@model List<UsersInRoleDto>;
@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["RoleId"] as string;
}

<form asp-action="AddOrRemoveUser" asp-route-roleId="@RoleId">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-group ">
            <input class="form-check-input" type="checkbox" asp-for="@Model[i].IsSelected" />
            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                @Model[i].UserName
            </label>
        </div>
        <input type="hidden" asp-for="@Model[i].UserName" />
        <input type="hidden" asp-for="@Model[i].UserId" />
    }

    <input type="submit" value="Update" class="btn btn-primary my-3" />
    <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-light m-3 ">Cancel</a>
</form>