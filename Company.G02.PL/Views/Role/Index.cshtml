@model IEnumerable<RoleToReturnDto>


<h1>All Roles</h1>
<br />
<br />
@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="m-3 alert alert-info">
        <p> @TempData["Message"]</p>
    </div>
}
<form class="row g-4 my-3">

        <div class="col-4">
        <input id="SearchInput" class="form-control" placeholder="Search By Name" name="SearchInput" />
        </div>
        <div class="col-8">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
</form>
<a asp-action="Create" class="btn btn-primary"> Create Role</a>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
             
                    <partial name="_ButtonPartialView" model="@item.Id">

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning" role="alert">
        <h4>
            There is are No Roles :(
        </h4>
    </div>
}
