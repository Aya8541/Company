@model IEnumerable<UserToReturnDto>


<h1>All Users</h1>
<br />
<br />

<form class="row g-4 my-3">

        <div class="col-4">
        <input id="SearchInput" class="form-control" placeholder="Search By Name" name="SearchInput" />
        </div>
        <div class="col-8">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>
</form>

<br />
<br />

@if (Model.Count() > 0)
{
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Name</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UserName</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>
                        @foreach (var role in item.Roles)
                        {
                            <span>@role</span>
                        }
                    </td>
                
                    <partial name="_ButtonPartialView" model="@item.Id">

                </tr>
            }
        </tbody>
    </table>

}
else
{
    <div class="mt-4 alert alert-warning" role="alert">
        <h4>
            There is are No Users :(
        </h4>
    </div>
}
<script>


    $(document).ready(function () {
        const searchBar = $('#SearchInput');
        const table = $('table');

        searchBar.on('keyup', function (event) {
            var searchValue = searchBar.val();

            $.ajax({
                url: '/User/Search',
                type: 'Get',
                data: { SearchInput: searchValue },
                success: function (result) {
                    table.html(result);
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        });
    });
</script>